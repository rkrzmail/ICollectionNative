<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_menu"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.icollection.fonts.MerriweatherTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:padding="16dp"
        android:text="Title"
        android:textSize="@dimen/title_small"
        android:textColor="@color/colorTextSecondary"
        app:typeface="merriWeatherRegular"/>

    <com.icollection.fonts.MaterialDesignIconsTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="@string/fontello_icon_right_open_1"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/icon_medium" />

</RelativeLayout>